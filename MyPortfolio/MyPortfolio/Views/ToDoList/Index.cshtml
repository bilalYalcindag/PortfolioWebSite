@model List<ToDoList>

@{
	int count = 0;
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Yapılacaklar</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Yapılacaklar Listesi </div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							Yapılacaklar İşlemlerini Bu Kısımdan Yapabilirsiniz
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">İçerik</th>
									<th scope="col">Tarih</th>
									<th scope="col">Durum</th>
									<th scope="col">Sil</th>
									<th scope="col">Güncelle</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									count++;
									<tr>
										<td>@count</td>
										<td>@item.Title</td>
										<td>@item.Date</td>
										@if (item.Status == true)
										{
											<td><a href="/ToDoList/ChangeToDoListToFalse/@item.ToDoListID" class="btn btn-dark">Yapılmadı Olarak İşaretle</a></td>
										}
										else
										{
											<td><a href="/ToDoList /ChangeToDoListToTrue/@item.ToDoListID" class="btn btn-info">Yapıldı Olarak İşaretle</a></td>
										}
										<td><a href="/ToDoList/DeleteToDoList/@item.ToDoListID" class="btn btn-danger">Sil</a></td>
										<td><a href="/ToDoList/UpdateToDoList/@item.ToDoListID" class="btn btn-success">Guncelle</a></td>
									</tr>
								}


							</tbody>
						</table>
						<td><a href="/ToDoList/CreateToDoList/" class="btn btn-primary">Yeni Yapılacak İşlem</a></td>
					</div>
				</div>

			</div>

		</div>
	</div>
</div>




