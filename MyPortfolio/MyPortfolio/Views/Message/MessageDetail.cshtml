@model Message

<input type="hidden" asp-for="MessageId" />
<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Mesajlar</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Mesaj Detay</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							Gönderen : @Model.NameSurname - Email: @Model.Email - Gönderim Tarihi: @Model.SendDate
							<br />
							Mesaj: @Model.MessageDetail

						</div>
						

					</div>
				</div>

			</div>

		</div>
	</div>
</div>